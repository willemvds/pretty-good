location ~ ^/good/reading$ {
	return 302 /good/reading.{{{ readingVersion }}}.html;
}

location ~ ^/good/watching$ {
	return 302 /good/watching.{{{ watchingVersion }}}.html;
}

location ~ ^/good/(.*)\.(html)$ {
	root {{{ rootPath }}};

	rewrite ^/good/(.*)$ /$1 break;

	add_header Cache-Control "public, max-age=31536000, immutable";
	sendfile on;
	sendfile_max_chunk 512k;
	tcp_nopush on;
	tcp_nodelay on;
}

